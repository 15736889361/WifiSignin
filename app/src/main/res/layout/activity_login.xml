<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/bg_common"
              android:padding="@dimen/NormalPadding">

    <EditText
        android:id="@+id/edtTxt_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="11"
        android:inputType="number"
        style="@style/EditTextStyle"
        android:hint="请输入学生/老师编号"/>

    <EditText
        android:id="@+id/edtTxt_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入密码"
        android:layout_marginTop="@dimen/MiddlePadding"
        style="@style/EditTextStyle"
        android:password="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/NormalPadding"
        android:layout_marginBottom="@dimen/NormalPadding"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rdoBtn_teacher"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/LargerPadding"
                android:layout_weight="1"
                android:text="老师"/>

            <RadioButton
                android:id="@+id/rdoBtn_student"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/LargerPadding"
                android:checked="true"
                android:text="学生"/>

        </RadioGroup>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_selector"
        style="@style/BtnTxtStyle"
        android:text="登录"/>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/MiddlePadding"
        android:background="@drawable/btn_selector"
        style="@style/BtnTxtStyle"
        android:text="注册"/>

</LinearLayout>